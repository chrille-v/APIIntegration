{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "Api": {
    "BaseUrl": "https://api.example.com",
    "ApiKey": "123"
  },

  // Configuration for LAN communication
  "Lan": {
    "BaseUrl": "http://localhost:5005",
